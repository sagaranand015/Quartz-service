<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd 
        http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	<jaxrs:server id="quartzApi" address="/">
		<jaxrs:serviceBeans>
			<ref bean="quartzService" />
		</jaxrs:serviceBeans>
		<jaxrs:extensionMappings>
			<entry key="json" value="application/json" />
		</jaxrs:extensionMappings>
		<jaxrs:providers>   
			<bean class="org.apache.cxf.rs.security.cors.CrossOriginResourceSharingFilter" />
		</jaxrs:providers>
	</jaxrs:server>
	
	<bean id="mapper" class="org.dozer.DozerBeanMapper">
        <property name="mappingFiles">
            <list>
                <value>mappings.xml</value>
            </list>
        </property>
    </bean>

	<bean id="quartzLogic" class="com.walmart.quartz.logic.impl.QuartzLogicImpl">
	</bean>

	<bean id="quartzService" class="com.walmart.quartz.impl.QuartzImpl">
		<constructor-arg ref="quartzLogic" />
		<constructor-arg ref="mapper" />
	</bean>

</beans>